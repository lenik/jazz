<?xml version="1.0"?>
<project name="net.bodz.mda" default="default">

	<property environment="env" />
	<property name="distdir" value="${env.JAVA_LIB}" />
	<property name="distsrc" value="${env.JAVA_SRC}" />

	<target name="default" depends="dist">
	</target>

	<target name="dist" depends=":bin.jar, :src.jar">
		<copy todir="${distdir}">
			<fileset dir="${basedir}/build">
				<exclude name="*-source.jar" />
			</fileset>
		</copy>
		<copy todir="${distsrc}">
			<fileset dir="${basedir}/build">
				<include name="*-source.jar" />
			</fileset>
		</copy>
	</target>

	<target name=":bin.jar">
		<jar destfile="build/net.bodz.mda.jar">
			<fileset dir="mod/Text Parser/bin" />
			<fileset dir="mod/Javalava/bin" />
		</jar>
	</target>

	<target name=":src.jar">
		<jar destfile="build/net.bodz.mda-source.jar">
			<fileset dir="mod/Text Parser/bin" />
			<fileset dir="mod/Javalava/bin" />
		</jar>
	</target>

</project>
