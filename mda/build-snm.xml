<?xml version="1.0"?>
<project name="net.bodz.mda" default="default">

    <property environment="env" />
    <import file="${env.LAPIOTA}/lib/ant/basic.xml" />

    <target name="default" depends="10bin.jar, 10src.jar, 20mkbat, .kala.dist" />

    <target name="10bin.jar">
        <mkdir dir="build" />
        <jar destfile="build/net.bodz.mda.jar" update="true">
            <fileset dir="mod/Commons/bin" />
            <fileset dir="mod/DB Model/bin" />
            <fileset dir="mod/Javalava Parser/bin" />
            <fileset dir="mod/Model In Marks/bin" />
            <fileset dir="mod/Text Parser/bin" />
            <fileset dir="mod/Template Process/bin" />
            <fileset dir="mod/XML Models/bin" />
        </jar>
    </target>

    <target name="10src.jar">
        <mkdir dir="build" />
        <jar destfile="build/net.bodz.mda-src.jar" update="true">
            <fileset dir="mod/Commons/src" />
            <fileset dir="mod/DB Model/src" />
            <fileset dir="mod/Javalava Parser/src" />
            <fileset dir="mod/Model In Marks/src" />
            <fileset dir="mod/Text Parser/src" />
            <fileset dir="mod/Template Process/src" />
            <fileset dir="mod/XML Models/src" />
        </jar>
    </target>

    <target name="20mkbat" depends="10bin.jar">
        <mkbat outdir="${basedir}/bin">
            <library>bodz_mda</library>
            <classpath refid="project.classpath" />
            <findmain path="mod/Model In Marks/bin" />
            <findmain path="mod/Template Process/bin" />
            <findmain path="mod/XML Models/bin" />
        </mkbat>
    </target>

</project>
