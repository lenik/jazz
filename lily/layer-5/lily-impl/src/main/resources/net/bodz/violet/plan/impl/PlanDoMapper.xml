<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper 
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.bodz.violet.plan.impl.PlanDoMapper">

    <resultMap id="map1" type="net.bodz.violet.plan.PlanDo" extends="message.MAP_ALL">
        <association property="plan" javaType="net.bodz.violet.plan.Plan">
            <id property="id" column="plan" />
            <result property="subject" column="plan_subject" />
        </association>
        <association property="parent" javaType="net.bodz.violet.plan.PlanDo">
            <id property="id" column="parent" />
            <result property="subject" column="parent_subject" />
        </association>
    </resultMap>

    <sql id="select1"><![CDATA[
        select
            a.*,
            plan.subject "plan_subject",
            parent.subject "parent_subject",
            u.label "uid_label",
            g.label "gid_label"
        from plando a
            left join plan on a.plan = plan.id
            left join plando parent on a.parent = parent.id
            left join "user" u on a.uid=u.id
            left join "group" g on a.gid=g.id
        ]]>
    </sql>

    <sql id="select2"><![CDATA[
        select
            a.*,
            plan.subject "plan_subject",
            parent.subject "parent_subject",
            u.label "uid_label",
            g.label "gid_label"
        from plando a
            left join plan on a.plan = plan.id
            left join plando parent on a.parent = parent.id
            left join "user" u on a.uid=u.id
            left join "group" g on a.gid=g.id
        ]]>
    </sql>

    <sql id="filtconds">
        <!-- co -->
        <include refid="co.modefilt" />
    </sql>

    <select id="all" resultMap="map1">
        <include refid="select1" />
    </select>

    <select id="filter" resultMap="map1">
        <include refid="select1" />
        <where>
            <include refid="filtconds" />
        </where>
    </select>

    <select id="select" parameterType="int" resultMap="map1">
        <include refid="select2" />
        <where>
            <if test="_parameter != null">a.id = #{id}</if>
        </where>
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id"><![CDATA[
        insert into plando(
            uid, gid, mode, acl,
            priority, flags, state, 
            t0, t1,
            op, subject, text,
            plan, parent
        ) values(
            #{ownerUser.id}, #{ownerGroup.id}, #{accessMode}, #{acl},
            #{priority}, #{flags}, #{state}, 
            #{beginTime}, #{endTime},
            #{op.id}, #{subject}, #{text},
            #{plan.id}, #{parent.id}
        ) returning id; --
    ]]></insert>

    <update id="update">
        update plando
        <set>
            <include refid="co.setVSA" />
            <include refid="mi.setT" />
            <include refid="message.setUM" />
            plan = #{plan.id},
            parent = #{parent.id},
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <delete id="delete">
        delete from plando where id = #{id}
    </delete>

    <select id="count" resultType="hashmap">
        select count(*) "rows" from plando
        <where>
            <if test="_parameter != null">
                <include refid="filtconds" />
            </if>
        </where>
    </select>

</mapper>
