<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper 
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.bodz.violet.asset.dao.GroupAssetMapper">

    <resultMap id="objlist_map" type="net.bodz.violet.asset.GroupAsset" extends="co.MAP_UVX">
        <result property="quantity" column="qty" />
        <result property="serial" column="serial" />
        <result property="expire" column="expire" />
        <association property="artifact" javaType="net.bodz.violet.art.Artifact">
            <id property="id" column="art" />
            <result property="label" column="art_label" />
        </association>
        <association property="region" javaType="net.bodz.violet.store.Region">
            <id property="id" column="region" />
            <result property="label" column="region_label" />
        </association>
        <association property="owner" javaType="net.bodz.lily.security.Group">
            <id property="id" column="owner" />
            <result property="label" column="owner_label" />
        </association>
    </resultMap>

    <sql id="objlist_sql"><![CDATA[
        select
            a.*,
            art.label "art_label",
            region.label "region_label",
            o.label "owner_label",
            u.label "uid_label",
            g.label "gid_label"
        from asset_group a
            left join art on a.art = art.id
            left join region on a.region = region.id
            left join "group" o on a."owner" = o.id
            left join "user" u on a.uid = u.id
            left join "group" g on a.gid = g.id
        ]]>
    </sql>

    <sql id="objedit_sql"><![CDATA[
        select
            a.*,
            art.label "art_label",
            region.label "region_label",
            o.label "owner_label",
            u.label "uid_label",
            g.label "gid_label"
        from asset_group a
            left join art on a.art = art.id
            left join region on a.region = region.id
            left join "group" o on a."owner" = o.id
            left join "user" u on a.uid = u.id
            left join "group" g on a.gid = g.id
        ]]>
    </sql>

    <sql id="filtconds">
        <!-- co -->
        <include refid="co.modefilt" />
    </sql>

    <select id="all" resultMap="objlist_map">
        <include refid="objlist_sql" />
    </select>

    <select id="filter" resultMap="objlist_map">
        <include refid="objlist_sql" />
        <where>
            <include refid="filtconds" />
        </where>
    </select>

    <select id="select" parameterType="int" resultMap="objlist_map">
        <include refid="objedit_sql" />
        <where>
            <if test="_parameter != null">a.id = #{id}</if>
        </where>
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id"><![CDATA[
        insert into asset_group(
            priority, flags, state, uid, gid, mode, acl,
            art, region, 
            qty, serial, expire,
            owner
        ) values(
            #{priority}, #{flags}, #{state}, #{ownerUser.id}, #{ownerGroup.id}, #{accessMode}, #{acl},
            #{artifact.id}, #{region.id},
            #{quantity}, #{serial}, #{expire},
            #{owner.id}
        );
    ]]></insert>

    <update id="update">
        update asset_group
        <set>
            <include refid="co.setVSA" />
            art = #{artifact.id},
            region = #{region.id},
            qty = #{quantity}, 
            serial = #{serial},
            expire = #{expire},
            owner = #{owner.id},
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <delete id="delete">
        delete from asset_group where id = #{id}
    </delete>

    <select id="count" resultType="hashmap">
        select count(*) "rows" from asset_group
        <where>
            <if test="_parameter != null">
                <include refid="filtconds" />
            </if>
        </where>
    </select>

</mapper>
