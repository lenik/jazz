<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper 
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.bodz.violet.edu.impl.CourseMapper">

    <resultMap id="objlist_map" type="net.bodz.violet.edu.Course" extends="co.MAP_UVX">
        <result property="properties.jsonStr" column="props" />
        <result property="credit" column="credit" />
        <result property="plugins.jsonStr" column="plugins" />
        <association property="category" javaType="net.bodz.violet.edu.CourseCategory">
            <id property="id" column="cat" />
            <result property="label" column="cat_label" />
        </association>
    </resultMap>

    <sql id="objlist_sql"><![CDATA[
        select
            a.*,
            cat.label "cat_label",
            u.label "uid_label",
            g.label "gid_label"
        from course a
            left join coursecat cat on a.cat = cat.id
            left join "user" u on a.uid = u.id
            left join "group" g on a.gid = g.id
        ]]>
    </sql>

    <sql id="objedit_sql"><![CDATA[
        select
            a.*,
            cat.label "cat_label",
            u.label "uid_label",
            g.label "gid_label"
        from course a
            left join coursecat cat on a.cat = cat.id
            left join "user" u on a.uid = u.id
            left join "group" g on a.gid = g.id
        ]]>
    </sql>

    <sql id="filtconds">
        <!-- co -->
        <include refid="co.modefilt" />
    </sql>

    <select id="all" resultMap="objlist_map">
        <include refid="objlist_sql" />
    </select>

    <select id="filter" resultMap="objlist_map">
        <include refid="objlist_sql" />
        <where>
            <include refid="filtconds" />
        </where>
    </select>

    <select id="select" parameterType="int" resultMap="objlist_map">
        <include refid="objedit_sql" />
        <where>
            <if test="_parameter != null">a.id = #{id}</if>
        </where>
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id"><![CDATA[
        insert into course(
            label, description,
            priority, flags, state, uid, gid, mode, acl,
            cat, credit
        ) values(
            #{label}, #{description},
            #{priority}, #{flags}, #{state}, #{ownerUser.id}, #{ownerGroup.id}, #{accessMode}, #{acl},
            #{category.id}, #{credit}
        );
    ]]></insert>

    <update id="update">
        update course
        <set>
            <include refid="co.setUSA" />
            cat = #{category.id},
            credit = #{credit},
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <delete id="delete">
        delete from course where id = #{id}
    </delete>

    <select id="count" resultType="hashmap">
        select count(*) "rows" from course
        <where>
            <if test="_parameter != null">
                <include refid="filtconds" />
            </if>
        </where>
    </select>

</mapper>
