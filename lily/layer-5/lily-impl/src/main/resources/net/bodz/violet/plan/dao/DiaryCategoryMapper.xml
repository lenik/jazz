    <insert id="insert" useGeneratedKeys="true" keyProperty="id"><![CDATA[
        insert into diarycat(
            "name",
            uid,
            gid,
            mode,
            acl,
            label,
            description,
            priority,
            flags,
            "state",
            creation,
            lastmod,
            "version",
            image,
            imagealt,
            props,
            parent,
            "depth",
            nref
        ) values(
            #{uniqName},
            #{ownerUserId},
            #{ownerGroupId},
            #{accessMode},
            #{acl},
            #{label},
            #{description},
            #{priority},
            #{flags},
            #{state},
            #{creationDate},
            #{lastModifiedDate},
            #{version},
            #{image},
            #{imageAlt},
            #{properties.jsonStr}::jsonb,
            #{parentId},
            #{depth},
            #{refCount}
        );
    ]]></insert>

    <update id="update">
        update diarycat
        <set>
            "name" = #{uniqName},
            uid = #{ownerUserId},
            gid = #{ownerGroupId},
            mode = #{accessMode},
            acl = #{acl},
            label = #{label},
            description = #{description},
            priority = #{priority},
            flags = #{flags},
            "state" = #{state},
            creation = #{creationDate},
            lastmod = #{lastModifiedDate},
            "version" = #{version},
            image = #{image},
            imagealt = #{imageAlt},
            props = #{properties.jsonStr}::jsonb,
            parent = #{parentId},
            "depth" = #{depth},
            nref = #{refCount},
        </set>
        <where>
