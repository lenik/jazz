    <insert id="insert" useGeneratedKeys="true" keyProperty="id"><![CDATA[
        insert into post_backref(
            uid,
            gid,
            mode,
            acl,
            label,
            description,
            priority,
            flags,
            "state",
            creation,
            lastmod,
            "version",
            post,
            site,
            "key",
            "value"
        ) values(
            #{uId},
            #{gId},
            #{mode},
            #{acl},
            #{label},
            #{description},
            #{priority},
            #{flags},
            #{state},
            #{creationDate},
            #{lastModifiedDate},
            #{version},
            #{postId},
            #{siteId},
            #{key},
            #{value}
        );
    ]]></insert>

