    <select id="all" resultMap="objlist_map">
        <include refid="objlist_sql" />
        <include refid="co.opts" />
    </select>

    <select id="filter" resultMap="objlist_map">
        <include refid="objlist_sql" />
        <where>
            <include refid="filtconds" />
        </where>
        <include refid="co.opts" />
    </select>

    <select id="select" resultMap="objlist_map">
        <include refid="objedit_sql" />
        <where>
            <if test="_parameter != null">a.id = #{id}</if>
        </where>
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id"><![CDATA[
        insert into vapp(
            uid,
            gid,
            mode,
            acl,
            label,
            description,
            priority,
            flags,
            "state",
            creation,
            lastmod,
            "version",
            code,
            props,
            req,
            cat,
            secret
        ) values(
            #{uId},
            #{gId},
            #{mode},
            #{acl},
            #{label},
            #{description},
            #{priority},
            #{flags},
            #{state},
            #{creationDate},
            #{lastModifiedDate},
            #{version},
            #{codeName},
            #{properties.jsonStr}::jsonb,
            #{reqId},
            #{catId},
            #{secret}
        );
    ]]></insert>

    <update id="update">
        update vapp
        <set>
            uid = #{uId},
            gid = #{gId},
            mode = #{mode},
            acl = #{acl},
            label = #{label},
            description = #{description},
            priority = #{priority},
            flags = #{flags},
            "state" = #{state},
            creation = #{creationDate},
            lastmod = #{lastModifiedDate},
            "version" = #{version},
            code = #{codeName},
            props = #{properties.jsonStr}::jsonb,
            req = #{reqId},
            cat = #{catId},
            secret = #{secret},
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <delete id="delete">
        delete from vapp
        <where>
            id = #{id}
        </where>
    </delete>

    <select id="count" resultType="long">
        select count(*) "rows" from vapp
        <where>
            <if test="_parameter != null">
                <include refid="filtconds" />
            </if>
        </where>
    </select>

    <update id="delete_xrefs">
        alter table lily.vapi drop constraint vapi_app_fkey;
        alter table lily.vapi_credit drop constraint vapi_credit_app_fkey;
        alter table lily.vapi_log drop constraint vapi_log_app_fkey;
    </update>

    <update id="create_xrefs">
        alter table lily.vapi
            add constraint vapi_app_fkey foreign key (app)
            references lily.vapp (id)
            on update cascade
            on delete cascade
            ;
        alter table lily.vapi_credit
            add constraint vapi_credit_app_fkey foreign key (app)
            references lily.vapp (id)
            on update cascade
            ;
        alter table lily.vapi_log
            add constraint vapi_log_app_fkey foreign key (app)
            references lily.vapp (id)
            on update cascade
            ;
    </update>

</mapper>
