<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.bodz.violet.plan.impl.DiaryReviewMapper">

    <resultMap id="map1" type="net.bodz.violet.plan.DiaryReview" extends="message.MAP_ALL">
        <association property="diary" javaType="net.bodz.violet.plan.Diary">
            <id property="id" column="diary" />
            <result property="label" column="diary_subject" />
        </association>
        <association property="parent" javaType="net.bodz.violet.plan.DiaryReview">
            <id property="id" column="parent" />
            <result property="label" column="parent_subject" />
        </association>
    </resultMap>

    <sql id="select1"><![CDATA[
        select
            a.*,
            op.label "op_label",
            diary.subject "diary_subject",
            parent.subject "parent_subejct"
        from diaryrev a
            left join "user" op on a.op = op.id
            left join diary on a.diary = diary.id
            left join diaryrev parent on a.parent = parent.id
        ]]>
    </sql>

    <sql id="select2"><![CDATA[
        select
            a.*,
            op.label "op_label",
            diary.subject "diary_subject",
            parent.subject "parent_subejct"
        from diaryrev a
            left join "user" op on a.op = op.id
            left join diary on a.diary = diary.id
            left join diaryrev parent on a.parent = parent.id
        ]]>
    </sql>

    <sql id="filtconds">
        <!-- co -->
        <include refid="co.modefilt" />
    </sql>

    <select id="all" resultMap="map1">
        <include refid="select1" />
    </select>

    <select id="filter" resultMap="map1">
        <include refid="select1" />
        <where>
            <include refid="filtconds" />
        </where>
    </select>

    <select id="select" parameterType="int" resultMap="map1">
        <include refid="select2" />
        <where>
            <if test="_parameter != null">a.id = #{id}</if>
        </where>
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id"><![CDATA[
        insert into diaryrev(
            priority, flags, state,
            t0, t1,
            op, subject, text,
            parent,
            diary
        ) values(
            #{priority}, #{flags}, #{state},
            #{beginDate}, #{endDate},
            #{op.id}, #{subject}, #{text},
            #{parent.id},
            #{diary.id}
        ) returning id; --
    ]]></insert>

    <update id="update">
        update diaryrev
        <set>
            <include refid="co.setVS" />
            <include refid="mi.setT" />
            <include refid="message.setUM" />
            parent = #{parent.id},
            diary = #{diary.id},
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <delete id="delete">
        delete from diaryrev where id = #{id}
    </delete>

    <select id="count" resultType="hashmap">
        select count(*) "rows" from diaryrev
        <where>
            <if test="_parameter != null">
                <include refid="filtconds" />
            </if>
        </where>
    </select>

</mapper>
