<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper 
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.bodz.violet.store.impl.StoreCategoryMapper">

    <resultMap id="map1" type="net.bodz.violet.store.StoreCategory" extends="co.MAP_UVX">
        <result property="properties.jsonForm" column="props" />
    </resultMap>

    <sql id="select1"><![CDATA[
        select
            a.*,
            u.label "uid_label",
            g.label "gid_label"
        from storecat a
            left join "user" u on a.uid=u.id
            left join "group" g on a.gid=g.id
        ]]>
    </sql>

    <sql id="select2"><![CDATA[
        select
            a.*,
            u.label "uid_label",
            g.label "gid_label"
        from storecat a
            left join "user" u on a.uid=u.id
            left join "group" g on a.gid=g.id
        ]]>
    </sql>

    <sql id="filtconds">

    </sql>

    <select id="all" resultMap="map1">
        <include refid="select1" />
    </select>

    <select id="filter" resultMap="map1">
        <include refid="select1" />
        <where>
            <include refid="filtconds" />
        </where>
    </select>

    <select id="select" parameterType="int" resultMap="map1">
        <include refid="select2" />
        <where>
            <if test="_parameter != null">a.id=#{id}</if>
        </where>
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id"><![CDATA[
        insert into storecat(
            code, label, description,
            props
        ) values (
            #{codeName},#{label},#{description},
            #{properties.jsonForm}::jsonb
        ) returning id; --
    ]]></insert>

    <update id="update">
        update storecat
        <set>
            <include refid="co.setU" />
            <if test="properties != null">props = #{properties.jsonForm}::jsonb,</if>
        </set>
        <where>
            <if test="id != null">id=#{id}</if>
        </where>
    </update>

    <delete id="delete">
        delete from storecat where id=#{id}
    </delete>

    <select id="count" resultType="hashmap">
        select count(*) "total" from storecat a
        <where>
            <if test="_parameter != null">
                <include refid="filtconds" />
            </if>
        </where>
    </select>
    
</mapper>
