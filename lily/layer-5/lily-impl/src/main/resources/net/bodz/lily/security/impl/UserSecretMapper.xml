<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.bodz.lily.security.impl.UserSecretMapper">

    <resultMap id="map1" type="net.bodz.lily.security.UserSecret" extends="co.MAP_V">
        <result property="salt" column="salt" />
        <result property="password" column="passwd" />
        <result property="publicKey" column="pubkey" />
        <result property="email" column="email" />
        <result property="emailValidated" column="emailok" />
        <result property="mobile" column="tel" />
        <result property="mobileValidated" column="telok" />
        <association property="user" javaType="net.bodz.lily.security.User">
            <id property="id" column="user" />
            <result property="codeName" column="u_name" />
            <result property="label" column="u_label" />
        </association>
    </resultMap>

    <resultMap id="map2" type="net.bodz.lily.security.UserSecret" extends="map1">
    </resultMap>

    <sql id="select1"><![CDATA[
        select
            a.*,
            u.name "u_name",
            u.label "u_label"
        from usersec a
            left join "user" u on a.uid = u.id
        ]]>
    </sql>

    <sql id="select2"><![CDATA[
        select
            a.*,
            u.name "u_name",
            u.label "u_label"
        from usersec a
            left join "user" u on a.uid = u.id
        ]]>
    </sql>

    <sql id="filtconds">
        <if test="m.codeName != null">and u.name = #{m.codeName}</if>
        <if test="m.password != null">and a.passwd = #{m.password}</if>
        <if test="m.email != null">and a.email = #{m.email}</if>
        <if test="m.mobile != null">and a.tel = #{m.mobile}</if>
    </sql>

    <select id="all" resultMap="map1">
        <include refid="select1" />
    </select>

    <select id="filter" resultMap="map1">
        <include refid="select1" />
        <where>
            <include refid="filtconds" />
        </where>
    </select>

    <select id="select" parameterType="int" resultMap="map2">
        <include refid="select2" />
        <where>
            <if test="_parameter != null">a.id = #{id}</if>
        </where>
    </select>

    <select id="selectByCodeName" parameterType="String" resultMap="map2">
        <include refid="select2" />
        <where>
            <if test="_parameter != null">u.name = #{code}</if>
        </where>
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id"><![CDATA[
        insert into usersec(
            "user",
            salt, passwd, pubkey,
            email, emailok, tel, telok,
            props, ques, ans
        ) values(
            #{user.id},
            #{salt}, #{password}, #{publicKey},
            #{email}, #{emailValidated}, #{mobile}, #{mobileValidated},
            #{properties.jsonForm}, #{question}, #{answer}
        ) returning id; --
    ]]></insert>

    <update id="update">
        update usersec
        <set>
            <include refid="co.setV" />
            passwd = #{password},
            salt = #{salt},
            pubkey = #{pubkey},
            email = #{email},
            emailok = #{emailValidated},
            tel =
            #{mobile},
            telok = #{mobileValidated},
            props = #{jsonForm},
            question = #{question},
            answer = #{answer},
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <delete id="delete">
        delete from usersec where id = #{id}
    </delete>

    <select id="count" resultType="hashmap">
        select count(*) "rows" from usersec
        <where>
            <if test="_parameter != null">
                <include refid="filtconds" />
            </if>
        </where>
    </select>

</mapper>
