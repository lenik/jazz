<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper 
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.bodz.violet.art.impl.ArtifactCategoryMapper">

    <resultMap id="objlist_map" type="net.bodz.violet.art.ArtifactCategory" extends="co.MAP_UVX">
        <result property="properties.jsonStr" column="props" />
        <result property="depth" column="depth" />
        <result property="skuCodeFormat" column="skufmt" />
        <result property="barCodeFormat" column="barfmt" />
        <result property="count" column="count" />
        <association property="parent" javaType="net.bodz.violet.art.ArtifactCategory">
            <id property="id" column="parent" />
            <result property="label" column="parent_label" />
        </association>
    </resultMap>

    <sql id="objlist_sql"><![CDATA[
        select
            a.*,
            parent.label "parent_label",
            u.label "uid_label",
            g.label "gid_label"
        from artcat a
            left join artcat parent on a.parent=parent.id
            left join "user" u on a.uid=u.id
            left join "group" g on a.gid=g.id
        ]]>
    </sql>

    <sql id="objedit_sql"><![CDATA[
        select
            a.*,
            parent.label "parent_label",
            u.label "uid_label",
            g.label "gid_label"
        from artcat a
            left join artcat parent on a.parent=parent.id
            left join "user" u on a.uid=u.id
            left join "group" g on a.gid=g.id
        ]]>
    </sql>

    <sql id="filtconds">
        <include refid="co.modefilt" />
        <include refid="co.filter-ui" />
        <include refid="co.filter-version" />
        <if test="m.maxDepth != null">and a.depth&lt;=#{m.maxDepth}</if>
    </sql>

    <select id="all" resultMap="objlist_map">
        <include refid="objlist_sql" />
    </select>

    <select id="filter" resultMap="objlist_map">
        <include refid="objlist_sql" />
        <where>
            <include refid="filtconds" />
        </where>
    </select>

    <select id="select" parameterType="int" resultMap="objlist_map">
        <include refid="objedit_sql" />
        <where>
            <if test="_parameter != null">a.id = #{id}</if>
        </where>
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id"><![CDATA[
        insert into artcat(
            code, label, description,
            priority, flags, state, uid, gid, mode, acl,
            props,
            parent, depth, skufmt, barfmt
        ) values(
            #{codeName},#{label},#{description},
            #{priority}, #{flags}, #{state}, #{ownerUser.id}, #{ownerGroup.id}, #{accessMode}, #{acl},
            #{properties.jsonStr}::jsonb,
            #{parent.id}, #{depth}, #{skuCodeFormat}, #{barCodeFormat} 
        ) returning id; --
    ]]></insert>

    <update id="update">
        update artcat
        <set>
            <include refid="co.setUSA" />
            <if test="properties != null">props = #{properties.jsonStr}::jsonb,</if>
            <if test="parent != null">parent = #{parent.id},</if>
            depth = #{depth},
            skufmt = #{skuCodeFormat},
            barfmt = #{barCodeFormat}
        </set>
        <where>
            <if test="id != null">id = #{id}</if>
        </where>
    </update>

    <delete id="delete">
        delete from artcat where id=#{id}
    </delete>

    <select id="count" resultType="hashmap">
        select count(*) "total" from artcat a
        <where>
            <if test="_parameter != null">
                <include refid="filtconds" />
            </if>
        </where>
    </select>

</mapper>
