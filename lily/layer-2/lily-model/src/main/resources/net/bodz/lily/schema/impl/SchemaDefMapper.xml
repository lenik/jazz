<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper 
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.bodz.lily.schema.impl.SchemaDefMapper">

    <resultMap id="map1" type="net.bodz.lily.schema.SchemaDef" extends="co.MAP_ALL">
        
    </resultMap>

    <sql id="select1"><![CDATA[
        select a.*
        from _schema a
        ]]>
    </sql>

    <sql id="select2"><![CDATA[
        select a.*,
        from _schema a
        ]]>
    </sql>

    <select id="all" resultMap="map1">
        <include refid="select1" />
    </select>

    <select id="filter" resultMap="map1">
        <include refid="select1" />
        <where>
        </where>
    </select>

    <select id="select" parameterType="int" resultMap="map1">
        <include refid="select2" />
        <where>
            <if test="_parameter != null">a.id=#{id}</if>
        </where>
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id"><![CDATA[
        insert into _schema(
            code, label, description,
            priority, flags, state
        ) values(
            #{codeName}, #{label}, #{description},
            #{priority}, #{flags}, #{state}
        ) returning id; --
    ]]></insert>

    <update id="update">
        update _schema
        <set>
            <include refid="co.setUS" />
            code = #{codeName},
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <delete id="delete">
        delete from _schema where id=#{id}
    </delete>

    <select id="count" resultType="hashmap">
        select count(*) "rows" from _schema
    </select>
    
</mapper>
