<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper 
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.bodz.lily.model.base.schema.impl.TagDefMapper">

    <resultMap id="map1" type="net.bodz.lily.model.base.schema.TagDef" extends="co.mapUS">
        <association property="tagSet" javaType="net.bodz.lily.model.base.schema.TagSetDef">
            <id property="id" column="tagv" />
            <id property="label" column="tagv_label" />
        </association>
    </resultMap>

    <sql id="select1"><![CDATA[
        select a.*, v.label tagv_label
        from tag a
            left join tagv v on a.tagv=v.id
        ]]>
    </sql>

    <sql id="select2"><![CDATA[
        select a.*, v.label tagv_label
        from tag a
            left join tagv v on a.tagv=v.id
        ]]>
    </sql>

    <select id="all" resultMap="map1">
        <include refid="select1" />
    </select>

    <select id="filter" resultMap="map1">
        <include refid="select1" />
        <where>
            <if test="tagSetId != null">and a.tagv=#{tagSetId}</if>
        </where>
    </select>

    <select id="select" parameterType="int" resultMap="map1">
        <include refid="select2" />
        <where>
            <if test="_parameter != null">a.id=#{id}</if>
        </where>
    </select>

    <select id="insert" resultType="int">
        <![CDATA[
        insert into tag(code, label, description)
            values(#{codeName},#{label},#{description})
            returning id
    ]]></select>

    <update id="update">
        update tag
        <set>
            <include refid="co.setUS" />
        </set>
        <where>
            <if test="id != null">id=#{id}, </if>
        </where>
    </update>

    <delete id="delete">
        delete from tag where id=#{id}
    </delete>

    <select id="count" resultType="hashmap">
        select count(*) "total" from tag
    </select>
    
</mapper>
