<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper 
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.bodz.violet.store.impl.ArtifactMapper">

    <resultMap id="map1" type="net.bodz.violet.store.Artifact" extends="co.MAP_UVX">
        <result property="skuCode" column="sku" />
        <result property="barCode" column="barcode" />
        <result property="modelName" column="model" />
        <result property="finish" column="finish" />
        <association property="category" javaType="net.bodz.violet.store.ArtifactCategory">
            <id property="id" column="cat" />
            <result property="label" column="cat_label" />
        </association>
        <association property="uom" javaType="net.bodz.violet.store.UOM">
            <id property="id" column="uom" />
            <result property="label" column="uom_label" />
        </association>
    </resultMap>

    <sql id="select1"><![CDATA[
        select
            a.*,
            artcat.label "cat_label",
            uom.label "uom_label",
            u.label "uid_label",
            g.label "gid_label"
        from art a
            left join artcat on a.cat=artcat.id
            left join uom on a.uom=uom.id
            left join "user" u on a.uid=u.id
            left join "group" g on a.gid=g.id
        ]]>
    </sql>

    <sql id="select2"><![CDATA[
        select
            a.*,
            artcat.label "cat_label",
            uom.label "uom_label",
            u.label "uid_label",
            g.label "gid_label"
        from art a
            left join artcat on a.cat=artcat.id
            left join uom on a.uom=uom.id
            left join "user" u on a.uid=u.id
            left join "group" g on a.gid=g.id
        ]]>
    </sql>

    <sql id="filtconds">
        <if test="m.uomId != null">and a.uom=#{m.uomId}</if>
        <if test="m.categoryId != null">and a.cat=#{m.categoryId}</if>
        <if test="m.noCategory">and a.cat is null</if>
    </sql>

    <select id="all" resultMap="map1">
        <include refid="select1" />
    </select>

    <select id="filter" resultMap="map1">
        <include refid="select1" />
        <where>
            <include refid="filtconds" />
        </where>
    </select>

    <select id="select" parameterType="int" resultMap="map1">
        <include refid="select2" />
        <where>
            <if test="_parameter != null">a.id=#{id}</if>
        </where>
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id"><![CDATA[
        insert into art(
            label, description,
            priority, flags, state, uid, gid, mode, acl,
            cat, sku, barcode, model, finish,
            uom
        ) values(
            #{label},#{description},
            #{priority}, #{flags}, #{state}, #{ownerUser.id}, #{ownerGroup.id}, #{accessMode}, #{acl},
            #{category.id}, #{skuCode}, #{barCode}, #{modelName}, #{finish},
            #{uom.id}
        ) returning id; --
    ]]></insert>

    <update id="update">
        update art
        <set>
            <include refid="co.setUSA" />
            <if test="category != null">cat = #{category.id},</if>
            sku = #{skuCode},
            barcode = #{barCode},
            model = #{modelName},
            finish = #{finish},
            <if test="uom != null">uom = #{uom.id},</if>
        </set>
        <where>
            <if test="id != null">id=#{id}</if>
        </where>
    </update>

    <delete id="delete">
        delete from art where id=#{id}
    </delete>

    <select id="count" resultType="hashmap">
        select * from v_art_n
    </select>

</mapper>
