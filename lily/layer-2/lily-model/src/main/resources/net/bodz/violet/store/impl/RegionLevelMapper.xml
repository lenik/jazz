<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper 
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "net.bodz.violet.store.impl.RegionLevelMapper">

    <resultMap id = "map1" type = "net.bodz.violet.store.RegionLevel" extends = "co.MAP_UV">
        <result property = "properties.jsonForm" column = "props" />
    </resultMap>

    <sql id = "select1"><![CDATA[
        select
            a.*
        from regionlevel a
        ]]>
    </sql>

    <sql id = "select2"><![CDATA[
        select
            a.*
        from regionlevel a
        ]]>
    </sql>

    <sql id = "filtconds">

    </sql>

    <select id = "all" resultMap = "map1">
        <include refid = "select1" />
    </select>

    <select id = "filter" resultMap = "map1">
        <include refid = "select1" />
        <where>
            <include refid = "filtconds" />
        </where>
    </select>

    <select id = "select" parameterType = "int" resultMap = "map1">
        <include refid = "select2" />
        <where>
            <if test = "_parameter !=  null">a.id = #{id}</if>
        </where>
    </select>

    <insert id = "insert" useGeneratedKeys = "true" keyProperty = "id"><![CDATA[
        insert into regionlevel(
            code, label, description,
            props
        ) values(
            #{codeName},#{label},#{description},
            #{properties.jsonForm}::jsonb
        ) returning id; --
    ]]></insert>

    <update id = "update">
        update regionlevel
        <set>
            <include refid = "co.setU" />
            <if test = "properties !=  null">props  =  #{properties.jsonForm}::jsonb,</if>
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <delete id = "delete">
        delete from regionlevel where id = #{id}
    </delete>

</mapper>
