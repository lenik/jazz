<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper 
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.bodz.lily.model.base.schema.impl.FormDefMapper">

    <resultMap id="map1" type="net.bodz.lily.model.base.schema.FormDef" extends="co.MAP_ALL">
        <association property="schema" javaType="net.bodz.lily.model.base.schema.SchemaDef">
            <id property="id" column="schema" />
            <id property="label" column="schema_label" />
        </association>
    </resultMap>

    <sql id="select1"><![CDATA[
        select a.*, s.label schema_label
        from _form a
            left join _schema s on a.schema=s.id
        ]]>
    </sql>

    <sql id="select2"><![CDATA[
        select a.*, s.label schema_label
        from _form a
            left join _schema s on a.schema=s.id
        ]]>
    </sql>

    <select id="all" resultMap="map1">
        <include refid="select1" />
    </select>

    <select id="filter" resultMap="map1">
        <include refid="select1" />
        <where>
            <if test="m.schemaId != null">and a.schema=#{m.schemaId}</if>
        </where>
    </select>

    <select id="select" parameterType="int" resultMap="map1">
        <include refid="select2" />
        <where>
            <if test="_parameter != null">a.id=#{id}</if>
        </where>
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id"><![CDATA[
        insert into _form(code, label, description)
            values(#{codeName},#{label},#{description})
            returning id
    ]]></insert>

    <update id="update">
        update _form
        <set>
            <include refid="co.setUS" />
        </set>
        <where>
            <if test="id != null">id=#{id}, </if>
        </where>
    </update>

    <delete id="delete">
        delete from _form where id=#{id}
    </delete>

    <select id="count" resultType="hashmap">
        select count(*) "rows" from _form
    </select>
    
</mapper>
