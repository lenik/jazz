<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper 
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.bodz.violet.shop.impl.ShopMapper">

    <resultMap id="map1" type="net.bodz.violet.shop.Shop" extends="co.MAP_UVX">
        <result property="properties.jsonForm" column="props" />
        <result property="hydm" column="hydm" />
    </resultMap>
    
    <resultMap id="map2" type="net.bodz.violet.shop.Shop" extends="map1">
        <collection property="items" javaType="net.bodz.lily.entity.SizedList" ofType="net.bodz.violet.shop.ShopItem">
            <id property="id" column="y_id" />
            <result property="label" column="y_label" />
            <result property="description" column="y_description" />
        </collection>
    </resultMap>

    <sql id="select1"><![CDATA[
        select
            a.*,
            u.label "uid_label",
            g.label "gid_label"
        from shop a
            left join "user" u on a.uid=u.id
            left join "group" g on a.gid=g.id
        ]]>
    </sql>

    <sql id="select2"><![CDATA[
        select
            a.*,
            u.label "uid_label",
            g.label "gid_label"
        from shop a
            left join "user" u on a.uid = u.id
            left join "group" g on a.gid = g.id
        ]]>
    </sql>

    <sql id="filtconds">
        <!-- co -->
        <include refid="co.modefilt" />
    </sql>

    <select id="all" resultMap="map1">
        <include refid="select1" />
    </select>

    <select id="filter" resultMap="map1">
        <include refid="select1" />
        <where>
            <include refid="filtconds" />
        </where>
    </select>

    <select id="select" parameterType="int" resultMap="map1">
        <include refid="select2" />
        <where>
            <if test="_parameter != null">a.id = #{id}</if>
        </where>
    </select>

    <select id="selectByCodeName" parameterType="String" resultMap="map1">
        <include refid="select2" />
        <where>
            <if test="_parameter != null">a.code = #{code}</if>
        </where>
    </select>

    <insert id="_insert"><![CDATA[
        insert into shop(
            code, label, description,
            priority, flags, state, uid, gid, mode, acl,
            hydm
        ) values(
            #{codeName}, #{label}, #{description},
            #{priority}, #{flags}, #{state}, #{ownerUser.id}, #{ownerGroup.id}, #{accessMode}, #{acl},
            #{hydm}
        )
    ]]></insert>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id"><![CDATA[
        insert into shop(
            code, label, description,
            priority, flags, state, uid, gid, mode, acl,
            hydm
        ) values(
            #{codeName}, #{label}, #{description},
            #{priority}, #{flags}, #{state}, #{ownerUser.id}, #{ownerGroup.id}, #{accessMode}, #{acl},
            #{hydm}
        ) returning id; --
    ]]></insert>

    <update id="update">
        update shop
        <set>
            <include refid="co.setUSA" />
            code = #{code},
            props = #{properties.jsonForm},
            hydm = #{hydm},
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <delete id="delete">
        delete from shop where id = #{id}
    </delete>

    <select id="count" resultType="hashmap">
        select count(*) "rows" from shop
        <where>
            <if test="_parameter != null">
                <include refid="filtconds" />
            </if>
        </where>
    </select>

</mapper>
