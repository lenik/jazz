<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper 
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.bodz.violet.plan.impl.DiaryCategoryMapper">

    <resultMap id="map1" type="net.bodz.violet.plan.DiaryCategory" extends="co.MAP_UVX">
        <association property="parent" javaType="net.bodz.violet.plan.DiaryCategory">
            <id property="id" column="parent" />
            <result property="label" column="parent_label" />
        </association>
    </resultMap>

    <sql id="select1"><![CDATA[
        select
            a.*,
            parent.label "parent_label",
            u.label "uid_label",
            g.label "gid_label"
        from diarycat a
            left join diarycat parent on a.parent=parent.id
            left join "user" u on a.uid=u.id
            left join "group" g on a.gid=g.id
        ]]>
    </sql>

    <sql id="select2"><![CDATA[
        select
            a.*,
            parent.label "parent_label",
            u.label "uid_label",
            g.label "gid_label"
        from diarycat a
            left join diarycat parent on a.parent=parent.id
            left join "user" u on a.uid=u.id
            left join "group" g on a.gid=g.id
        ]]>
    </sql>

    <sql id="filtconds">
        <!-- co -->
        <include refid="co.modefilt" />
    </sql>

    <select id="all" resultMap="map1">
        <include refid="select1" />
    </select>

    <select id="filter" resultMap="map1">
        <include refid="select1" />
        <where>
            <include refid="filtconds" />
        </where>
    </select>

    <select id="select" parameterType="int" resultMap="map1">
        <include refid="select2" />
        <where>
            <if test="_parameter != null">a.id = #{id}</if>
        </where>
    </select>

    <insert id="_insert"><![CDATA[
        insert into diarycat(
            code, label, description, parent
        ) values(
            #{codeName}, #{label}, #{description}, #{parent.id}
        )
    ]]></insert>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id"><![CDATA[
        insert into diarycat(
            code, label, description, parent
        ) values(
            #{codeName}, #{label}, #{description}, #{parent.id}
        ) returning id; --
    ]]></insert>

    <update id="update">
        update diarycat
        <set>
            <include refid="co.setUS" />
            parent = #{parent.id},
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <delete id="delete">
        delete from diarycat where id = #{id}
    </delete>

    <select id="count" resultType="hashmap">
        select count(*) "rows" from diarycat
        <where>
            <if test="_parameter != null">
                <include refid="filtconds" />
            </if>
        </where>
    </select>

</mapper>
