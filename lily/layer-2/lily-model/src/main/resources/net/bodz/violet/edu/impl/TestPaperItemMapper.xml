<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper 
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.bodz.violet.edu.impl.TestPaperItemMapper">

    <resultMap id="map1" type="net.bodz.violet.edu.TestPaperItem" extends="co.MAP_UVX">
        <result property="properties.jsonForm" column="props" />
        <result property="score" column="score" />
        <association property="paper" javaType="net.bodz.violet.edu.TestPaper">
            <id property="id" column="paper" />
            <result property="label" column="paper_label" />
        </association>
        <association property="question" javaType="net.bodz.violet.edu.TestQuestion">
            <id property="id" column="q" />
            <result property="label" column="q_subject" />
        </association>
    </resultMap>

    <sql id="select1"><![CDATA[
        select
            a.*,
            paper.label "paper_label",
            q.subject "q_subject"
        from testpaperl a
            left join testpaper paper on a.paper = paper.id
            left join testq q on a.q = q.id
        ]]>
    </sql>

    <sql id="select2"><![CDATA[
        select
            a.*,
            u.label "uid_label",
            g.label "gid_label"
        from testpaperl a
            left join "user" u on a.uid = u.id
            left join "group" g on a.gid = g.id
        ]]>
    </sql>

    <sql id="filtconds">
        <!-- co -->
        <include refid="co.modefilt" />
    </sql>

    <select id="all" resultMap="map1">
        <include refid="select1" />
    </select>

    <select id="filter" resultMap="map1">
        <include refid="select1" />
        <where>
            <include refid="filtconds" />
        </where>
    </select>

    <select id="select" parameterType="int" resultMap="map1">
        <include refid="select2" />
        <where>
            <if test="_parameter != null">a.id = #{id}</if>
        </where>
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id"><![CDATA[
        insert into testpaperl(
            priority, flags, state,
            props,
            paper, q, score
        ) values(
            #{priority}, #{flags}, #{state},
            #{properties.jsonForm},
            #{paper.id}, #{question.id}, #{score}
        ) returning id; --
    ]]></insert>

    <update id="update">
        update testpaperl
        <set>
            <include refid="co.setVS" />
            props = #{properties.jsonForm},
            paper = #{paper.id},
            q = #{question.id},
            score = #{score},
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <delete id="delete">
        delete from testpaperl where id = #{id}
    </delete>

    <select id="count" resultType="hashmap">
        select count(*) "rows" from testpaperl
        <where>
            <if test="_parameter != null">
                <include refid="filtconds" />
            </if>
        </where>
    </select>

</mapper>
