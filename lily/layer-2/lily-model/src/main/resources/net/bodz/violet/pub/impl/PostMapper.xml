<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.bodz.violet.pub.impl.PostMapper">

    <resultMap id="map1" type="net.bodz.violet.pub.Post" extends="message.MAP_ALL">
        <!-- result property="properties.jsonForm" column="props" / -->
        <association property="category" javaType="net.bodz.violet.pub.PostCategory">
            <id property="id" column="cat" />
            <result property="label" column="cat_label" />
        </association>
        <association property="parent" javaType="net.bodz.violet.pub.Post">
            <id property="id" column="parent" />
            <result property="subject" column="parent_subject" />
        </association>
    </resultMap>

    <sql id="select1"><![CDATA[
        select
            a.*,
            cat.label "cat_label",
            parent.subject "parent_subject",
            u.label "uid_label",
            g.label "gid_label"
        from post a
            left join postcat cat on a.cat = cat.id
            left join post parent on a.parent = parent.id
            left join "user" u on a.uid = u.id
            left join "group" g on a.gid = g.id
        ]]>
    </sql>

    <sql id="select2"><![CDATA[
        select
            a.*,
            cat.label "cat_label",
            parent.subject "parent_subject",
            u.label "uid_label",
            g.label "gid_label"
        from post a
            left join postcat cat on a.cat = cat.id
            left join post parent on a.parent = parent.id
            left join "user" u on a.uid = u.id
            left join "group" g on a.gid = g.id
        ]]>
    </sql>

    <sql id="filtconds">
        <!-- co -->
        <include refid="co.modefilt" />
    </sql>

    <select id="all" resultMap="map1">
        <include refid="select1" />
    </select>

    <select id="filter" resultMap="map1">
        <include refid="select1" />
        <where>
            <include refid="filtconds" />
        </where>
    </select>

    <select id="select" parameterType="int" resultMap="map1">
        <include refid="select2" />
        <where>
            <if test="_parameter != null">a.id = #{id}</if>
        </where>
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id"><![CDATA[
        insert into post(
            uid, gid, mode, acl,
            priority, flags, state, 
            t0, t1,
            op, subject, text, 
            cat,
            parent
        ) values(
            #{ownerUser.id}, #{ownerGroup.id}, #{accessMode}, #{acl},
            #{priority}, #{flags}, #{state}, 
            #{beginTime}, #{endTime},
            #{op.id}, #{subject}, #{text}, 
            #{category.id},
            #{parent.id}
        ) returning id; --
    ]]></insert>

    <update id="update">
        update post
        <set>
            <include refid="co.setVSA" />
            <include refid="mi.setT" />
            <include refid="message.setUM" />
            cat = #{category.id},
            parent = #{parent.id},
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <delete id="delete">
        delete from post where id = #{id}
    </delete>

    <select id="count" resultType="hashmap">
        select count(*) "rows" from post
        <where>
            <if test="_parameter != null">
                <include refid="filtconds" />
            </if>
        </where>
    </select>

</mapper>
