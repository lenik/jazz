    <insert id="insert" useGeneratedKeys="true" keyProperty="id"><![CDATA[
        insert into extsite(
            uid,
            gid,
            mode,
            acl,
            label,
            description,
            priority,
            flags,
            "state",
            creation,
            lastmod,
            "version",
            props,
            parent,
            "depth",
            urlfmt,
            bonus,
            "count"
        ) values(
            #{ownerUserId},
            #{ownerGroupId},
            #{accessMode},
            #{acl},
            #{label},
            #{description},
            #{priority},
            #{flags},
            #{state},
            #{creationDate},
            #{lastModifiedDate},
            #{version},
            #{properties.jsonStr}::jsonb,
            #{parentId},
            #{depth},
            #{urlfmt},
            #{bonus},
            #{count}
        );
    ]]></insert>

    <update id="update">
        update extsite
        <set>
            uid = #{ownerUserId},
            gid = #{ownerGroupId},
            mode = #{accessMode},
            acl = #{acl},
            label = #{label},
            description = #{description},
            priority = #{priority},
            flags = #{flags},
            "state" = #{state},
            creation = #{creationDate},
            lastmod = #{lastModifiedDate},
            "version" = #{version},
            props = #{properties.jsonStr}::jsonb,
            parent = #{parentId},
            "depth" = #{depth},
            urlfmt = #{urlfmt},
            bonus = #{bonus},
            "count" = #{count},
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <delete id="delete">
        delete from extsite
        <where>
            id = #{id}
        </where>
    </delete>

    <select id="count" resultType="long">
        select count(*) "rows" from extsite
        <where>
            <if test="_parameter != null">
                <include refid="filtconds" />
            </if>
        </where>
    </select>

    <update id="delete_xrefs">
        alter table lily.article_backref drop constraint article_backref_site_fkey;
        alter table lily.extsite drop constraint extsite_parent_fkey;
        alter table lily.post_backref drop constraint post_backref_site_fkey;
        alter table violet.art_backref drop constraint art_backref_site_fkey;
    </update>

    <update id="create_xrefs">
        alter table lily.article_backref
            add constraint article_backref_site_fkey foreign key (site)
            references lily.extsite (id)
            on update cascade
            on delete cascade
            ;
        alter table lily.extsite
            add constraint extsite_parent_fkey foreign key (parent)
            references lily.extsite (id)
            on update cascade
            on delete cascade
            ;
        alter table lily.post_backref
            add constraint post_backref_site_fkey foreign key (site)
            references lily.extsite (id)
            on update cascade
            on delete cascade
            ;
        alter table violet.art_backref
            add constraint art_backref_site_fkey foreign key (site)
            references lily.extsite (id)
            on update cascade
            on delete cascade
            ;
    </update>

