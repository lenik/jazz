        </if>
        <if test="m.credit != null">and a.credit = #{m.credit}</if>
        <if test="m.creditRange!= null">
            <if test="m.creditRange.hasStartIncl">and a.credit >= #{m.creditRange.start}</if>
            <if test="m.creditRange.hasStartExcl">and a.credit > #{m.creditRange.start}</if>
            <if test="m.creditRange.hasEndIncl">and a.credit &lt;= #{m.creditRange.end}</if>
            <if test="m.creditRange.hasEndExcl">and a.credit &lt; #{m.creditRange.end}</if>
        </if>
        <if test="m.plugins != null">and a.plugins = #{m.plugins}</if>
    </sql>

    <select id="all" resultMap="objlist_map">
        <include refid="objlist_sql" />
        <include refid="co.opts" />
    </select>

    <select id="filter" resultMap="objlist_map">
        <include refid="objlist_sql" />
        <where>
            <include refid="filtconds" />
        </where>
        <include refid="co.opts" />
    </select>

    <select id="select" resultMap="objlist_map">
        <include refid="objedit_sql" />
        <where>
            <if test="_parameter != null">a.id = #{id}</if>
        </where>
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id"><![CDATA[
        insert into course(
            uid,
            gid,
            mode,
            acl,
            label,
            description,
            priority,
            flags,
            "state",
            creation,
            lastmod,
            "version",
            props,
            cat,
            nfav,
            nvote,
            nhate,
            credit,
            plugins
        ) values(
            #{ownerUserId},
            #{ownerGroupId},
            #{accessMode},
            #{acl},
            #{label},
            #{description},
            #{priority},
            #{flags},
            #{state},
            #{creationDate},
            #{lastModifiedDate},
            #{version},
            #{properties.jsonStr}::jsonb,
            #{categoryId},
            #{favCount},
            #{voteCount},
            #{hateCount},
            #{credit},
            #{plugins.jsonStr}::jsonb
        );
    ]]></insert>

    <update id="update">
        update course
        <set>
            uid = #{ownerUserId},
            gid = #{ownerGroupId},
            mode = #{accessMode},
            acl = #{acl},
            label = #{label},
            description = #{description},
            priority = #{priority},
            flags = #{flags},
            "state" = #{state},
            creation = #{creationDate},
            lastmod = #{lastModifiedDate},
            "version" = #{version},
            props = #{properties.jsonStr}::jsonb,
            cat = #{categoryId},
            nfav = #{favCount},
            nvote = #{voteCount},
            nhate = #{hateCount},
            credit = #{credit},
            plugins = #{plugins.jsonStr}::jsonb,
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <delete id="delete">
        delete from course
        <where>
            id = #{id}
        </where>
    </delete>

    <select id="count" resultType="long">
        select count(*) "rows" from course
        <where>
            <if test="_parameter != null">
                <include refid="filtconds" />
            </if>
        </where>
    </select>

</mapper>
